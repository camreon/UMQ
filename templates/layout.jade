doctype html
html
  head
    title='UMQ'
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='shortcut icon' href="{{ url_for('static', filename='favicon.ico') }}")
    link(rel='stylesheet', href="{{ url_for('static', filename='bower_components/bootstrap/dist/css/bootstrap.min.css') }}")

    link(rel='stylesheet', href="{{ url_for('static', filename='css/index.css') }}")

  body
    block content

    script(src="{{ url_for('static', filename='bower_components/jquery/dist/jquery.min.js') }}")
    script(src="{{ url_for('static', filename='bower_components/bootstrap/dist/js/bootstrap.min.js') }}")
    script(src="{{ url_for('static', filename='bower_components/underscore/underscore.js') }}")
    script(src="{{ url_for('static', filename='bower_components/backbone/backbone.js') }}")
    script(src="{{ url_for('static', filename='js/backbone-collection-iterator.js') }}")

    script(src="{{ url_for('static', filename='js/umq.js') }}")

    <!-- templates -->

    script(type="text/template", id="track-template")
        td.url(title='<%= url %>') <%- page_url || url %>
        td.track(title="<%= title + ' - ' + artist %>") <%- title %>
        td: a.delete(role='button', title='Delete')
            span.glyphicon.glyphicon-remove(aria-hidden='true')
